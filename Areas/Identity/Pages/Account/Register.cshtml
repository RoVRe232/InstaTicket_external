@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username">Username:</label>
                <div class="input-group mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">User:</div>
                    </div>
                    <input asp-for="Input.Username" type="text" class="form-control formInput" id="username" required>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Firstname">Firstname:</label>
                <input asp-for="Input.Firstname" type="text" class="form-control formInput" id="firstname" required>
            </div>

            <div class="form-group">
                <label asp-for="Input.Lastname">Lastname:</label>
                <input asp-for="Input.Lastname" type="text" class="form-control formInput" id="lastname" required>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth">Date of birth:</label>
                <input asp-for="Input.DateOfBirth" type="date" class="form-control formInput" id="dateofbirth" required>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
