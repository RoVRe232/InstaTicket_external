
@{
    ViewData["Title"] = "CreateFestival";
}

<link rel="stylesheet" href="~/css/commons.css" type="text/css">
<link rel="stylesheet" href="~/css/home.css" type="text/css" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<form method="post" enctype="multipart/form-data" asp-controller="Signup" asp-action="Signup">
    <div class="form-group">
        <label for="location">Location:</label>
        <input name="location" type="text" class="form-control formInput" id="location" placeholder="Location..." required>
    </div>
    <div class="form-group">
        <label for="username">Available tickets:</label>
        <div class="input-group col-sm-8">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input name="amount" type="text" class="form-control" aria-label="Amount">
        </div>
    </div>
    <label for="transaction-amount">Ticket price:</label>
    <div class="row">
        <div class="input-group col-sm-8">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input name="amount" type="text" class="form-control" aria-label="Amount">
            <div class="input-group-prepend">
                <select class="custom-select" id="selectCurrency" name="currency">
                    <option selected>Currency...</option>
                    <option value="1">RON</option>
                    <option value="2">EUR</option>
                    <option value="3">USD</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="singerName">Festival name:</label>
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
                <div class="input-group-text">Name:</div>
            </div>
            <input name="festivalName" type="text" class="form-control formInput" id="festivalName" required>
        </div>
    </div>
    <div class="form-group">
        <label for="singerName">Festival description:</label>
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
                <div class="input-group-text">Description:</div>
            </div>
            <input name="festivalDescription" type="text" class="form-control formInput" id="festivalDescription" required>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group date" data-provide="datepicker">
            <input type="text" class="form-control" for="startDate" name="startDate">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th">Start date</span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group date" data-provide="datepicker">
            <input type="text" class="form-control" for="endDate" name="endDate">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th">End date</span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary col-sm-4">Create festival</button>

    <small class="text-center">By creating this festival you agree to </small>
    <a href="#">Our Terms of Service</a>
</form>
